keywords = {plausibility,presence,telepresence,virtual environment,virtual reality},
number = {1535},
pages = {3549--3557},
title = {{Place Illusion and Plausibility Can Lead to Realistic Behaviour in Immersive Virtual Environments}},
year = {2009}
